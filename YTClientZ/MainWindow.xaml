<Window x:Class="YTClientZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YTClientZ"
        mc:Ignorable="d"
        Topmost="True"
        ResizeMode="NoResize"
        Height="170" Width="265">
    <StackPanel x:Name="MainPanel">
        <TextBlock Text="Текст для перевода:" />
        <TextBlock x:Name="ToTranslateText" Height="50" MaxHeight="50" TextTrimming="CharacterEllipsis" />
        <TextBlock Text="Перевод:" />
        <TextBlock x:Name="TranslatedText" Height="50" MaxHeight="50" TextTrimming="CharacterEllipsis" />
    </StackPanel>
</Window>
